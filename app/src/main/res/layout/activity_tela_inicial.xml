<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".app.screen.TelaInicial">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize" />

    </com.google.android.material.appbar.AppBarLayout>

    <include layout="@layout/content_tela_inicial" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="@dimen/fab_margin"
        android:layout_marginBottom="16dp"
        app:srcCompat="@android:drawable/ic_dialog_email" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/fadeBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fade Transition" />

        <Button
            android:id="@+id/zoomBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Zoom Transition" />

        <Button
            android:id="@+id/inAndOutBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="InAndOut Transition" />

        <Button
            android:id="@+id/slideUpBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SlideUp Transition" />

        <Button
            android:id="@+id/slideDownBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SlideDown Transition" />

        <Button
            android:id="@+id/slideLeftBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SlideLeft Transition" />

        <Button
            android:id="@+id/slideRightBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SlideRight Transition" />

        <Button
            android:id="@+id/swipeLeftBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SwipeLeft Transition" />

        <Button
            android:id="@+id/swipeRightBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SwipeRight Transition" />

        <Button
            android:id="@+id/cardBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Card Transition" />

        <Button
            android:id="@+id/diagonalBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Diagonal Transition" />


        <Button
            android:id="@+id/shrinkBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Shrink Transition" />


        <Button
            android:id="@+id/spinBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Spin Transition" />

        <Button
            android:id="@+id/splitBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Split Transition" />


        <Button
            android:id="@+id/windmillBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Windmill Transition" />

    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>